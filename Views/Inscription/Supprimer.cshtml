@model Inscription

@{
    ViewData["Title"] = "Supprimer une Inscription";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4 text-danger">@ViewData["Title"]</h2>

            <div class="alert alert-warning" role="alert">
                <strong>Attention!</strong> Cette action est définitive et ne peut pas être annulée.
            </div>

            @if (Model != null)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Détails de l'Inscription</h5>
                        <dl class="row">
                            <dt class="col-sm-3">Étudiant:</dt>
                            <dd class="col-sm-9">@Model.Etudiant?.Nom @Model.Etudiant?.Prenom (@Model.Etudiant?.Matricule)</dd>

                            <dt class="col-sm-3">Classe:</dt>
                            <dd class="col-sm-9">@Model.Classe?.Code - @Model.Classe?.Libelle</dd>

                            <dt class="col-sm-3">Année Scolaire:</dt>
                            <dd class="col-sm-9">@Model.AnneeScolaire?.Code</dd>

                            <dt class="col-sm-3">Date d'Inscription:</dt>
                            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-3">Montant:</dt>
                            <dt class="col-sm-3">Montant:</dt>
                            <dd class="col-sm-9">@Model.Montant.ToString("N0") FCFA</dd>
                        </dl>
                    </div>
                </div>

                <form method="post" action="@Url.Action("Supprimer", "Inscription", new { id = Model.Id })">
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Lister", "Inscription")" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-danger">Confirmer la Suppression</button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">
                    Inscription non trouvée.
                </div>
                <a href="@Url.Action("Lister", "Inscription")" class="btn btn-secondary">Retour</a>
            }
        </div>
    </div>
</div>
