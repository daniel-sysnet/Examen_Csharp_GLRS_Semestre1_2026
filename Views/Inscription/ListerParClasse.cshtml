@model IEnumerable<Inscription>

@{
    ViewData["Title"] = $"Inscriptions de la Classe: {ViewBag.Classe?.Code}";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            <p class="text-muted">@ViewBag.Classe?.Libelle</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Lister", "Inscription")" class="btn btn-secondary">Retour</a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4">
        <h5>Autres Classes:</h5>
        <div class="btn-group" role="group">
            <a href="@Url.Action("Lister", "Inscription")" class="btn btn-outline-secondary">Toutes</a>
            @foreach (var classe in ViewBag.Classes)
            {
                <a href="@Url.Action("ListerParClasse", "Inscription", new { classeId = classe.Id })" 
                   class="btn btn-outline-secondary @(classe.Id == ViewBag.Classe?.Id ? "active" : "")">
                    @classe.Code
                </a>
            }
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date d'Inscription</th>
                        <th>Étudiant</th>
                        <th>Matricule</th>
                        <th>Année Scolaire</th>
                        <th>Montant</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inscription in Model)
                    {
                        <tr>
                            <td>@inscription.Date.ToString("dd/MM/yyyy")</td>
                            <td>@inscription.Etudiant?.Nom @inscription.Etudiant?.Prenom</td>
                            <td>@inscription.Etudiant?.Matricule</td>
                            <td>@inscription.AnneeScolaire?.Code</td>
                            <td class="text-end">@inscription.Montant.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("Supprimer", "Inscription", new { id = inscription.Id })" 
                                   class="btn btn-sm btn-danger">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-3">
            <p class="text-muted">Total: @Model.Count() inscription(s)</p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Aucune inscription trouvée pour cette classe.
        </div>
    }
</div>
